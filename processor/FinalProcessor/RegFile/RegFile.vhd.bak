library IEEE;
use IEEE.std_logic_1164.all;

-- janky 8 register reg-file. Doesn't *actually* use registers, per se, but usees 8 signal values
-- michaelhollman

entity RegFile is
	port(
		clk_r, clk_w:	in	std_logic;
		RS, RT, RD:		in 	std_logic_vector(2 downto 0);
		RegWrite:		in	bit;
		WriteData:		in	std_logic_vector(7 downto 0);
		out1, out2:		out std_logic_vector(7 downto 0)
	);
end RegFile;

architecture processRegisters of RegFile is

-- use 8 "static variables" for registers
signal zero, one, two, three, four, five, six, seven : std_logic_vector(7 downto 0) := "00000000";
	
begin
	process(clk_r)
	begin
		if clk_r'event and clk_r='1' then
			if RS="000" then
				output1 <= "00000000";
			elsif RS="001" then
				output1 <= one;
			elsif RS="010" then
				output1 <= two;
			elsif RS="011" then
				output1 <= three;
			elsif RS="100" then
				output1 <= four;
			elsif RS="101" then
				output1 <= five;
			elsif RS="110" then
				output1 <= six;
			elsif RS="111" then
				output1 <= seven;
			end if;
			
			if RT="000" then
				output2 <= "00000000";
			elsif RT="001" then
				output2 <= one;
			elsif RT="010" then
				output2 <= two;
			elsif RT="011" then
				output2 <= three;
			elsif RT="100" then
				output2 <= four;
			elsif RT="101" then
				output2 <= five;
			elsif RT="110" then
				output2 <= six;
			elsif RT="111" then
				output2 <= seven;
			end if;
		end if;
	end process;
	
	process (clk_w)
	begin
		if clk_w'event and clk_w='1' then
			if RegWrite='1' then
				case RD is
					when "000" => zero <= "00000000";
					when "001" => one <= WriteData;
					when "010" => two <= WriteData;
					when "011" => three <= WriteData;
					when "100" => four <= WriteData;
					when "101" => five <= WriteData;
					when "110" => six <= WriteData;
					when "111" => seven <= WriteData;
				end case;
			end if;
		end if;
	end process;
end processRegisters;